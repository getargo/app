{
  "name": "argo",
  "productName": "Argo",
  "version": "1.2.0",
  "description": "Flat-file static-site blog authoring and building system.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . Argo --overwrite --platform=darwin --arch=x64  --icon=./icons/argo.icns --prune=true --out=release",
    "package-linux": "electron-packager . Argo --overwrite --platform=linux  --arch=x64  --icon=./icons/argo.png  --prune=true --out=release"
  },
  "repository": "https://github.com/pmjones/argoblog",
  "keywords": [
    "static",
    "site",
    "blog",
    "markdown",
    "wordpress"
  ],
  "author": "Paul M. Jones",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^10.3.2",
    "electron-packager": "^15.2.0"
  }
}
